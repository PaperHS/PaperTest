    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        >

        <Button
            android:id="@+id/btn_radial"
            android:background="@drawable/btn_radial"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <Button
            android:id="@+id/btn_sweep"
            android:background="@drawable/btn_sweep"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <Button
            android:id="@+id/btn_linear"
            android:background="@drawable/btn_linear"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        </LinearLayout>
    <widget.CircleButton
        android:id="@+id/btn_chooseColorStart"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="78dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:cb_color="@android:color/holo_blue_light"
        app:cb_pressed_ring_width="8dip"/>
    <widget.CircleButton
        android:id="@+id/btn_chooseColorEnd"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        app:cb_color="@android:color/holo_blue_light"
        app:cb_pressed_ring_width="8dip"/>
</RelativeLayout>
